<div id="main">
    <div class="content">
        <h1 class="content-subhead"><%= @nome_beneficiario %></h1>
    </div>
    <div class="content">
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
                <i class="fa fa-phone-square fa-fw" aria-hidden="true"></i>
                <a href="tel:<%= @hash_info["numero_telefono"] %>"><%= @hash_info["numero_telefono"] %></a>
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
            <i class="fa fa-envelope fa-fw" aria-hidden="true"></i>
            <a href="mailto:<%= @hash_info["email"] %>"><%= @hash_info["email"] %></a>
        </div>

        <div class="pure-u-1 pure-u-md-1-3">
            <i class="fa fa-home fa-fw" aria-hidden="true"></i>
            <%= @hash_info["indirizzo"] %>
        </div>

    </div>

    <div class="pure-g">
        <div class="pure-u-1">
            <i class="fa fa-sticky-note fa-fw" aria-hidden="true"></i>
            <%= @hash_info["note"] %>
        </div>
    </div>
    
    </div>
    

    
    <div class="pure-g">
        <div class="pure-u-1 pure-u-sm-1-2">
            <p align="center"><a href="/beneficiari" class="pure-button button-secondary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Indietro</a></p>
        </div>
        <div class="pure-u-1 pure-u-sm-1-2">
            <p align="center"><a href="/beneficiari/edit/<%= @id_beneficiario %>" class="pure-button button-success"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifica</a></p>
        </div>
    </div>
</div>