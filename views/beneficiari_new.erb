<div id="main">
    <div class="content">
        <h1 class="content-subhead">Aggiungi nuovo beneficiario</h1>
    </div>
<div class="content subhead">
<form class="pure-form pure-form-stacked" action="/beneficiari/new" method="post">
    <fieldset>
        <label for="nome">Nome e Cognome <i>(obbligatorio)</i></label>
        <input class="pure-u-1 pure-u-md-1-2" name="nome_beneficiario" id="nome" type="text" placeholder="Nome e Cognome" required>
    <fieldset class="pure-group">
        <input name="tel" type="text" class="pure-u-1 pure-u-md-2-3" placeholder="N&deg; di telefono">
        <input name="addr" type="text" class="pure-u-1 pure-u-md-2-3" placeholder="Indirizzo">
        <input name="email" type="email" class="pure-u-1 pure-u-md-2-3" placeholder="E-mail">
    </fieldset>

        <div class="pure-g">
        <div class="pure-u-1 pure-u-sm-1-2"><p align="center">
            <a href="/beneficiari" class="button-error pure-button"><i class="fa fa-times" aria-hidden="true"></i> Annulla</a></p>
            </div>
        <div class="pure-u-1 pure-u-sm-1-2"><p align="center">
            <button type="submit" class="pure-button pure-button-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i></i> Salva</button></p>
        </div>
        </div>
    </fieldset>
</form>

</div>
</div>